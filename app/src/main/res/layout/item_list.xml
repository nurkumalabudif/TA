<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="304dp"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <TextView
            android:id="@+id/textViewTanggal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/imageView"
            android:layout_marginLeft="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@android:color/white"
            tools:text="Judul" />


        <TextView
            android:id="@+id/textViewCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textViewTanggal"
            android:layout_alignStart="@+id/textViewTanggal"
            android:layout_below="@+id/textViewTanggal"
            android:layout_marginTop="11dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            tools:text="Deskripsi" />

        <ImageButton
            android:id="@+id/buttonShare"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignBottom="@+id/textViewTanggal"
            android:layout_alignEnd="@+id/buttonDelete"
            android:layout_alignRight="@+id/buttonDelete"
            android:layout_marginEnd="18dp"
            android:layout_marginRight="18dp"
            android:tint="#757575"
            app:srcCompat="@drawable/ic_share_black_24dp" />

        <Button
            android:id="@+id/buttonDelete"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonShare"
            android:layout_toEndOf="@+id/imageView"
            android:layout_toRightOf="@+id/imageView"
            android:text="DELETE"
            android:textColor="?attr/colorAccent" />

        <Button
            android:id="@+id/buttonEdit"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonDelete"
            android:layout_toEndOf="@+id/imageView"
            android:layout_toRightOf="@+id/imageView"
            android:text="EDIT"
            android:textColor="?attr/colorPrimary" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignLeft="@+id/textViewTanggal"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textViewTanggal"
            android:layout_marginTop="27dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/a" />

    </RelativeLayout>
</android.support.v7.widget.CardView>